/var/log/freepbx/ucp_out.log {
        daily
        if empty
        rotate 7
        compress
        dateext
        sharedscripts
        create 0640 asterisk asterisk
        postrotate
        /usr/sbin/asterisk -rx 'logger reload' > /dev/null 2> /dev/null || true
        endscript
}

